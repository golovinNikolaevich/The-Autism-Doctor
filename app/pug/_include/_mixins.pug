//- Mixin for header navigation menu
mixin navigation__item(link, name)
  li.navigation__item
    a(href= link).navigation__link= name

mixin min-article(link, img, alt, h6, comment, like)
  .min-article__block
    a(href= link)
      img(src= img, alt= alt)
      .min-article__block-info
        h6= h6
        .comment-like
          .comment
            = comment
          .like
            = like

// Online course
mixin online-course
  .course-wrap
    .online-course
      .online-course__description
        h2 Регистрируйтесь на онлайн-курс «Аутизм и аутоподобные состояния»
        .online-course__description-more
          .date
            p 4-7 мая
            span 12 лекций по 1,5 часа
          p Курс для родителей аутичных детей и психологов, начинающих работу с аутичными детьми. 
            | Продолжу рассказ об особенностях речи Никиты. Безглагольность — 
            | это не просто его речевое своеобразие, это отражение сути 
            | его мировосприятия.
      form(action="get").online-course__form-entry
        .submit
          .submit__input
            label(for="name" class="user")
            input(type="text" id="name" placeholder="ФИО")
          .submit__block
            .submit__input
              label(for="num" class="telephone")
              input(type="number" id="num" placeholder="Ваш телефон")
            .submit__input
              label(for="email" class="email")
              input(type="text" id="email" placeholder="Ваш электронный адрес")
        .submit
          .submit__input
            p уже идут
              span 1124
              | человек
            input(type="button" value="Записаться").button

mixin theme-blog(category, title, month, year, comment, like, img, alt, p, href)
  .theme-blog
    span= category
    h3= title
    .theme-blog__date-like
      .date
        span= month
        span= year
      .comment-like
        .comment
          = comment
        .like
          = like
    img(src= img, alt= alt)
    p= p
    a(href= href).more-link Читать

// Near event
mixin near-event(img, alt, date1, date2, date3, course, h5, p, enroll, when)
  .near-event__block
    img(src= img, alt= alt)
    .near-event__about
      .near-event__date-duration
        span= date1
        span= date2
        span= date3
      .near-event__text-enroll
        .near-event__text
          p= course
          h5= h5
          p= p
        .near-event__enroll
          a(href= enroll).button Записаться
          p= when

// Comment's
mixin comment(img, name, h5, date, text)
  .comment
    img(src= img, alt="")
    .comment-text
      span= name
      h5= h5
      span= date
      p= text
          
